#!/bin/sh

# This is bound to Shift+PrintScreen by default, requires maim. It lets you
# choose the kind of screenshot to take, including copying the image or even
# highlighting an area to copy. scrotcucks on suicidewatch right now.

# variables
#output="$(date '+%y%m%d-%H%M-%S').png"
output="$HOME/Pictures/Screenshots/Screenshot $(date +"%Y-%m-%d at %I.%M.%S %p").png"
xclip_cmd="xclip -sel clip -t image/png"

case "$(printf "a selected area\\ncurrent window\\nfull screen\\na selected area (copy)\\ncurrent window (copy)\\nfull screen (copy)" | dmenu -l 6 -i -p "Screenshot which area?")" in
    "a selected area")
	    maim -u -s "${output}"
	    notify-send "Screenshot saved at $output."
	    mpv --no-resume-playback --keep-open=no --idle=no "/home/piyush/Downloads/dbes/Dropbox/sounds/win10/DeviceConnect.wav"
	    ;;
    "current window")
	    maim -q -d 0.2 -i "$(xdotool getactivewindow)" "${output}"
	    notify-send "Screenshot saved at $output."
	    mpv --no-resume-playback --keep-open=no --idle=no "/home/piyush/Downloads/dbes/Dropbox/sounds/win10/DeviceConnect.wav"
	    ;;
    "full screen")
	    maim -q -d 0.2 "${output}"
	    notify-send "Screenshot saved at $output."
	    mpv --no-resume-playback --keep-open=no --idle=no "/home/piyush/Downloads/dbes/Dropbox/sounds/win10/DeviceConnect.wav"
	    ;;
    "a selected area (copy)")
	    maim -u -s "${output}"| ${xclip_cmd}
	    notify-send "Screenshot saved at $output."
	    mpv --no-resume-playback --keep-open=no --idle=no "/home/piyush/Downloads/dbes/Dropbox/sounds/win10/DeviceConnect.wav"
	    ;;
    "current window (copy)")
	    maim -q -d 0.2 -i "$(xdotool getactivewindow)" "${output}"| ${xclip_cmd}
	    notify-send "Screenshot saved at $output."
	    mpv --no-resume-playback --keep-open=no --idle=no "/home/piyush/Downloads/dbes/Dropbox/sounds/win10/DeviceConnect.wav"
	    ;;
    "full screen (copy)")
	    maim -q -d 0.2 "${output}"| ${xclip_cmd}
	    notify-send "Screenshot saved at $output."
	    mpv --no-resume-playback --keep-open=no --idle=no "/home/piyush/Downloads/dbes/Dropbox/sounds/win10/DeviceConnect.wav"
	    ;;
esac

if [ -f $output ] ; then
	xclip -selection clipboard -t image/png -i $output
	notify-send "Screenshot saved at $output."
	mpv --no-resume-playback --keep-open=no --idle=no "/home/piyush/Downloads/dbes/Dropbox/sounds/win10/DeviceConnect.wav"
fi
